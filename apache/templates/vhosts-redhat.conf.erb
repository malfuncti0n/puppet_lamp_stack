<VirtualHost *:80>
    ServerAdmin	<%= @adminemail %>
    ServerName <%= @servername %>
    ServerAlias www.<%= @servername %>
    DocumentRoot /var/www/<%= @servername -%>/public_html/
    ErrorLog /var/log/httpd/<%- @servername -%>/logs/error.log
    CustomLog /var/log/httpd/<%= @servername -%>/logs/access.log combined
</Virtual Host>

